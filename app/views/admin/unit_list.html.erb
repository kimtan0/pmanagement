<!-- Page Content -->
<div class="page-content">
  <div class="page-header d-flex flex-column flex-md-row align-items-md-center">
      <div class="page-header-left flex-fill">
          <div class="page-header-title d-flex">
              <div class="page-info mt-3 ml-0">
                <h5 class="page-title">Property Units</h5>
              </div>
          </div>
      </div>
  </div>


  <!-- Section Header -->
  <div class="section-header d-md-flex align-items-center">
    <div class="section-header-left flex-fill">
        <a href="<%= admin_dashboard_path %>" class="btn btn-success">
            Back to Dashboard
        </a>
    </div>
    <div class="section-header-right ml-auto">
      <%= link_to 'Print', print_list_path, class: 'btn btn-primary', target: :_blank %>
      <div class="btn-group" role="group">
        <%= link_to 'Create New Unit', admin_units_new_path, class: 'btn btn-primary-gradient' %>
      </div>
    </div>
  </div>
  <!-- / Section Header -->

  <!-- List Table -->
  <div class="table-wrapper table-responsive">
    <table id="contact-groups" class="table table-striped">
      <thead>
        <tr>
          <th scope="col">
            <div class="form-check">
                &nbsp;
            </div>
          </th>
          <th scope="col">Unit Number</th>
          <th scope="col">Unit Type</th>
          <th scope="col">Tenant Name</th>
          <th scope="col">Tenant Phone Number</th>
          <th scope="col">Payment Due</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @units.each do |u|%>
          <tr id="row_<%= u.id %>">
            <td scope="col">
              <div class="form-check">
                  &nbsp;
              </div>
            </td>
            <td scope="col"><%= u.unit_number %></td>
            <td scope="col"><%= u.unit_type.capitalize %></td>
            <td scope="col"><%= u.tenant_name %></td>
            <td scope="col"><%= u.tenant_phone_number %></td>
            <td scope="col"><%= '$' + (u.due_amount.clamp(0, 2147483647) / 100).to_s %></td>
            <td class="table-action">
              <%= link_to 'View', view_unit_path(u.id), class: 'btn btn-primary', data: { turbolinks: false } %>
              <%= link_to 'Edit', edit_unit_path(u.id), class: 'btn btn-success', data: { turbolinks: false } %>
              <%= link_to 'Delete', delete_unit_path(u.id), class: 'btn btn-danger btn-delete' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <!-- / List Table -->

</div>
